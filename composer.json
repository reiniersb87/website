{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "laravel/framework": "5.0.*",
        "laravelcollective/html": "~5.0",
        "laracasts/flash": "~1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1",
        "laracasts/commander": "~1.0",
        "intervention/image": "2.*",
        "intervention/imagecache": "2.*",
        "kodeine/laravel-acl" : "0.1.*",
        "rcrowe/twigbridge" : "0.7.*",
        "league/fractal": "0.11.*"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "Hel\\": "app/",
            "Joselfonseca\\LaravelAdmin\\": "joselfonseca/laravel-admin/src",
            "Joselfonseca\\ImageManager\\": "joselfonseca/image-manager/src",
            "Joselfonseca\\LaravelApiTools\\": "joselfonseca/laravel-api-tools/src"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-create-project-cmd": [
            "php -r \"copy('.env.example', '.env');\"",
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
